<div class="containerrr">
    <h2>Terabox Link Player</h2>
    <div class="input-container">
    <input type="text" id="teraboxLink" placeholder="Enter Terabox link">
    <button onclick="playLink()">Play</button>
</div>
    <div id="iframeContainer" style="display: none;">
        <iframe id="linkIframe" src="" frameborder="0" allowfullscreen></iframe>
    </div>
</div>
    <script>
        function playLink() {
            var link = document.getElementById("teraboxLink").value;
            if (link) {
                // Construct the new URL
                var newUrl = `/api/terabox.html?url=${encodeURIComponent(link)}`;
                
                // Set the iframe's src attribute to the new URL
                var iframe = document.getElementById("linkIframe");
                iframe.src = newUrl;
                
                
                // Show the iframe container
                document.getElementById("iframeContainer").style.display = "block";

                 fetch('/assets/php/save_link.php', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'teraboxLink=' + encodeURIComponent(link)
                })
                .catch(error => console.error('Error:', error));
            
            } else {
                alert("Please enter a valid Terabox link.");
            }
        }
    </script>

